<Window x:Class="WPF_TEST.View.BusyIndicatorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_TEST.View"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="BusyIndicatorView" Height="100" Width="200" WindowStyle="None" 
        WindowStartupLocation="CenterScreen">
    <Grid Background="#303030">
        <materialDesign:Card
            Background="#303030"
            
             UniformCornerRadius="50">
            <ProgressBar
                Style="{StaticResource MaterialDesignCircularProgressBar}"
                Value="50"
                Margin="0,0,0,15"
                IsIndeterminate="True" Height="50"  Width="50" />

        </materialDesign:Card>
        <TextBlock Text="Loading. . ." FontSize="30" Foreground="WhiteSmoke" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
    </Grid>
</Window>
