                    BorderBrush="Blue"
                    BorderThickness="2"
                    DataContext="{StaticResource Modbus}"
                    Height="80"
                    Width="80"
               
                    Style="{StaticResource MaterialDesignFlatButton}"
                    ToolTip="Start Service"
                    Command="{Binding Start_Service}"
                
                    Background="{DynamicResource MaterialDesignTextFieldBoxBackground}">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">

                            <materialDesign:PackIcon 
                            Kind="Play"
                            HorizontalAlignment="Center"
                            Height="50"
                            Width="60"
                            Foreground="Lime"/>

                        </StackPanel>
                    </Button>
                    <TextBlock 
                            Text="Start Service"
                        FontWeight="DemiBold"
                            FontSize="15"
                            HorizontalAlignment="Center"
                            Foreground="Black"/>
                </StackPanel>

                <StackPanel Margin="70,0,0,0">
                    <Button
                        Margin="0,30,0,5"
                        materialDesign:ButtonAssist.CornerRadius="8"
                        BorderBrush="Blue"
                        BorderThickness="2"
                        Height="80"
                        Width="80"
                
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Command="{Binding Stop_Service}"
                        Background="{DynamicResource MaterialDesignTextFieldBoxBackground}">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">

                            <materialDesign:PackIcon 
                            Kind="Stop"
                            HorizontalAlignment="Center"
                            Height="50"
                            Width="60"
                            Foreground="Red"/>

                        </StackPanel>


                    </Button>
                    <TextBlock 
                        Text="Stop Service"
                        FontWeight="DemiBold"
                        FontSize="15"
                        HorizontalAlignment="Center"
                        Foreground="Black"/>
                </StackPanel>


            </StackPanel>

            <StackPanel Grid.Column="2" Grid.Row="1" Orientation="Horizontal" >
                <StackPanel Margin="70,0,0,0">
                    <Button
                        Margin="0,30,0,5"
                        materialDesign:ButtonAssist.CornerRadius="8"
                        BorderBrush="Blue"
                        BorderThickness="2"
                        Height="80"
                        Width="80"
                        ToolTip="Thêm Mới"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Command="{Binding NewConnect}"
                        Background="{DynamicResource MaterialDesignTextFieldBoxBackground}">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">

                            <materialDesign:PackIcon 
                            Kind="PlusCircle"
                            HorizontalAlignment="Center"
                            Height="50"
                            Width="60"
                            Foreground="Yellow"/>

                        </StackPanel>


                    </Button>
                    <TextBlock 
                        Text="Thêm"
                        FontWeight="DemiBold"
                        FontSize="15"
                        HorizontalAlignment="Center"
                        Foreground="Black"/>
                </StackPanel>
                <StackPanel Margin="70,0,0,0">
                    <Button
                        Margin="0,30,0,5"
                        materialDesign:ButtonAssist.CornerRadius="8"
                        BorderBrush="Blue"
                        BorderThickness="2"
                        Height="80"
                        Width="80"
                        ToolTip="Chỉnh Sửa"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Command="{Binding EditConnect}"
                        CommandParameter="{Binding ElementName=Modbus_list,Path=SelectedItem}"
                        Background="{DynamicResource MaterialDesignTextFieldBoxBackground}">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Image Source="/ImageSource/Editting.png" />

                            <!--<materialDesign:PackIcon 
                            Kind="FileEdit"
                            HorizontalAlignment="Center"
                            Height="50"
                            Width="60"
                            Foreground="#f6236e"/>-->

                        </StackPanel>


                    </Button>
                    <TextBlock 
                        Text="Chỉnh Sửa"
                        FontWeight="DemiBold"
                        FontSize="15"
                        HorizontalAlignment="Center"
                        Foreground="Black"/>
                </StackPanel>

                <StackPanel Margin="70,0,0,0">
                    <Button
                        Margin="0,30,0,5"
                        materialDesign:ButtonAssist.CornerRadius="8"
                        BorderBrush="Blue"
                        BorderThickness="2"
                        Height="80"
                        Width="80"
                        ToolTip="Xóa"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Command="{Binding DeleteConnect}"
                        
                        Background="{DynamicResource MaterialDesignTextFieldBoxBackground}">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Image Source="/ImageSource/Deteting.png" />

                            <!--<materialDesign:PackIcon 
                            Kind="Delete"
                            HorizontalAlignment="Center"
                            Height="50"
                            Width="60"
                            Foreground="Red"/>-->

                        </StackPanel>


                    </Button>
                    <TextBlock 
                        Text="Xóa"
                        FontWeight="DemiBold"
                        FontSize="15"
                        HorizontalAlignment="Center"
                        Foreground="Black"/>
                </StackPanel>

                <StackPanel Margin="70,0,0,0">
                    <Button
                        Margin="0,30,0,5"
                        materialDesign:ButtonAssist.CornerRadius="8"
                        BorderBrush="Blue"
                        BorderThickness="2"
                        Height="80"
                        Width="80"
                        ToolTip="Device Information"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Command="{Binding OpenRuntimeView}"
                        Background="{DynamicResource MaterialDesignTextFieldBoxBackground}">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Image Source="/ImageSource/Connection.png" />

                            <!--<materialDesign:PackIcon 
                            Kind="Delete"
                            HorizontalAlignment="Center"
                            Height="50"
                            Width="60"
                            Foreground="Red"/>-->

                        </StackPanel>


                    </Button>
                    <TextBlock 
                        Text="Kết Nối"
                        FontWeight="DemiBold"
                        FontSize="15"
                        HorizontalAlignment="Center"
                        Foreground="Black"/>
                </StackPanel>
