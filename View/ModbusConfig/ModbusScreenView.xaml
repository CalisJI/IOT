<UserControl x:Class="WPF_TEST.View.ModbusScreenView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_TEST.View"
             
             mc:Ignorable="d" 
             xmlns:i ="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             DataContext="{StaticResource Modbus}"
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid>

       
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.6*"/>
                <ColumnDefinition Width="0.6*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Grid.Row="0">
                <GroupBox 
                Margin="30,40,30,10" 
                Header="Controller Name"
                TextBlock.TextAlignment="Center"
                TextBlock.FontSize="26">
                    <ListBox 
                    Height="692"
                    x:Name="Modbus_list"
                    ScrollViewer.VerticalScrollBarVisibility="Visible"
                  
                    DataContext="{StaticResource Modbus}"
                    ItemsSource="{Binding ModbusDevices}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DeviceName}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction
                                Command="{Binding Display_Type}"
                                CommandParameter="{Binding ElementName=Modbus_list, Path=SelectedItem}"/>


                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </ListBox>

                </GroupBox>
            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="0" >
                <GroupBox 
                Margin="10,40,10,10" 
                Header="Controller Details"
                TextBlock.TextAlignment="Center"
                TextBlock.FontSize="26">
                    <StackPanel Orientation="Vertical" Margin="0,10,0,0">

                        <Grid 
                        Height="380"
                        DataContext="{StaticResource Modbus}"
                        ScrollViewer.VerticalScrollBarVisibility="Visible">
                            <ContentControl Content="{Binding DisplayType}"/>

                        </Grid>

                    </StackPanel>

                </GroupBox>
                <GroupBox
                Margin="10,20,10,0" 
                Header="Data Exportation"
                TextBlock.TextAlignment="Center">
                    <StackPanel Orientation="Vertical">
                        <Grid >
                            <TextBlock 
                            Text="Export Rate (ms):"
                            FontSize="20" 
                            HorizontalAlignment="Left"
                            Margin="5"/>
                            <TextBox 
                            Margin="190,0,0,0"
                            HorizontalAlignment="Left" 
                            FontSize="20"
                            Text="N/A"/>
                        </Grid>
                        <Grid Margin="0,10,0,0">
                            <TextBlock 
                            Text="Data Delimiter:"
                            FontSize="20" 
                            HorizontalAlignment="Left"
                            Margin="5"/>
                            <TextBox 
                            Margin="190,0,0,0"
                            HorizontalAlignment="Left" 
                            FontSize="20"
                            Text="N/A"/>
                        </Grid>
                        <Grid Margin="0,10,0,0">
                            <TextBlock 
                            Text="Extraction Method:"
                            FontSize="20" 
                            HorizontalAlignment="Left"
                            Margin="5"/>
                            <TextBox 
                            Margin="190,0,0,0"
                            HorizontalAlignment="Left" 
                            FontSize="20"
                            Text="N/A"/>
                        </Grid>
                        <Grid Margin="0,10,0,0">
                            <TextBlock 
                            Text="Export Directory:"
                            FontSize="20" 
                            HorizontalAlignment="Left"
                            Margin="5"/>
                            <TextBox 
                            Margin="190,0,0,0"
                            HorizontalAlignment="Left" 
                            FontSize="20"
                            Text="N/A"/>
                        </Grid>
                        <Grid Margin="0,10,0,0">
                            <TextBlock 
                            Text="File Path:"
                            FontSize="20" 
                            HorizontalAlignment="Left"
                            Margin="5"/>
                            <TextBox 
                            TextWrapping="Wrap"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            Margin="190,0,0,0"
                            HorizontalAlignment="Left" 
                            FontSize="20"
                            Text="N/A"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
            <StackPanel
            Orientation="Vertical" 
            Grid.Row="0"
            Grid.Column="2">
                <GroupBox 
                Margin="10,40,10,10" 
                Header="Modbus Item"
                TextBlock.TextAlignment="Left"
                TextBlock.FontSize="26">
                    <ListView 
                        ItemsSource="{Binding Select_PLCVALUE}"
                        DataContext="{StaticResource Modbus}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID" DisplayMemberBinding="{Binding ElementName=Modbus_list,Path=SelectedItem.ID}"/>
                                <GridViewColumn Header="Register" DisplayMemberBinding="{Binding ElementName=Modbus_list,Path=SelectedItem.Register_Address}"/>
                                <GridViewColumn Header="Value">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <ListView
                                                Height="50"
                                                Width="200"
                                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                ItemsSource="{Binding Select_PLCVALUE.Data}"
                                                DataContext="{StaticResource Modbus}">
                                                <ListView.View>
                                                    <GridView>
                                                        <GridViewColumn>
                                                            <GridViewColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <TextBlock Text="{Binding CurrentTime}"/>
                                                                </DataTemplate>
                                                            </GridViewColumn.CellTemplate>
                                                        </GridViewColumn>
                                                        <GridViewColumn>
                                                            <GridViewColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <ListView ItemsSource="{Binding ArrayValue}">
                                                                        <ListView.View>
                                                                            <GridView>
                                                                                <GridViewColumn>
                                                                                    <GridViewColumn.CellTemplate>
                                                                                        <DataTemplate>
                                                                                            <TextBlock Text="{Binding}"/>
                                                                                        </DataTemplate>
                                                                                    </GridViewColumn.CellTemplate>
                                                                                </GridViewColumn>
                                                                            </GridView>
                                                                        </ListView.View>
                                                                    </ListView>
                                                                </DataTemplate>
                                                            </GridViewColumn.CellTemplate>
                                                        </GridViewColumn>
                                                    </GridView>
                                                </ListView.View>
                                            </ListView>
                                            <!--<DataGrid 
                                                Width="500"
                                                ScrollViewer.CanContentScroll="True"
                                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                Height="300"
                                                ItemsSource="{Binding Select_PLCVALUE.Data}"
                                                AutoGenerateColumns="True"
                                                EnableColumnVirtualization="True"
                                                EnableRowVirtualization="True"
                                                DataContext="{StaticResource Modbus}">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="Thởi gian" Binding="{Binding CurrentTime}"/>
                                                    <DataGridTemplateColumn>
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <DataGrid 
                                                                    DataContext="{StaticResource Modbus}"
                                                                    ItemsSource="{Binding DataValue}"
                                                                    AutoGenerateColumns="True"
                                                                    Width="250"
                                                                    Height="60">
                                                                    
                                                                </DataGrid>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>
                                                </DataGrid.Columns>
                                                
                                                
                                            </DataGrid>-->
                                            
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                        <ScrollBar Visibility="Collapsed" HorizontalAlignment="Right"/>
                    </ListView>

                </GroupBox>

            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal" >
                <StackPanel Margin="70,0,0,0" Orientation="Vertical" >
                    <Button
                        Margin="0,30,0,5"
                        Height="80"
                        Width="80"
                        BorderBrush="Blue"
                        BorderThickness="2"
                
                        materialDesign:ButtonAssist.CornerRadius="8"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        ToolTip="Start"
                        Command="{Binding Start}"
                        CommandParameter="{Binding ElementName=Modbus_list, Path=SelectedItem}"
                        Background="{DynamicResource MaterialDesignTextFieldBoxBackground}">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">

                            <materialDesign:PackIcon 
                            Kind="Play"
                            HorizontalAlignment="Center"
                            Height="50"
                            Width="60"
                            Foreground="Yellow"/>

                        </StackPanel>
                    </Button>
                    <TextBlock 
                            Text="Start"
                        FontWeight="DemiBold"
                            FontSize="15"
                            HorizontalAlignment="Center"
                            Foreground="Black"/>
                </StackPanel>
                
                <StackPanel Margin="70,0,0,0">
                    <Button
                        Margin="0,30,0,5"
                materialDesign:ButtonAssist.CornerRadius="8"
                BorderBrush="Blue"
                BorderThickness="2"
                Height="80"
                Width="80"
                
                Style="{StaticResource MaterialDesignFlatButton}"
                ToolTip="Stop"
                Command="{Binding Stop}"
                Background="{DynamicResource MaterialDesignTextFieldBoxBackground}">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">

                            <materialDesign:PackIcon 
                            Kind="Stop"
                            HorizontalAlignment="Center"
                            Height="50"
                            Width="60"
                            Foreground="Red"/>
                           
                        </StackPanel>
                    </Button>
                    <TextBlock 
                            Text="Stop"
                        FontWeight="DemiBold"
                            FontSize="15"
                            HorizontalAlignment="Center"
                            Foreground="Black"/>
                </StackPanel>

                <StackPanel  Margin="70,0,0,0">
                    <Button
                        Margin='0,30,0,5'
                    materialDesign:ButtonAssist.CornerRadius="8"
                    BorderBrush="Blue"
                    BorderThickness="2"
                    DataContext="{StaticResource Modbus}"
                    Height="80"
                    Width="80"
               
                    Style="{StaticResource MaterialDesignFlatButton}"
                    ToolTip="Start Service"
                    Command="{Binding Start_Service}"
                
                    Background="{DynamicResource MaterialDesignTextFieldBoxBackground}">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">

                            <materialDesign:PackIcon 
                            Kind="Play"
                            HorizontalAlignment="Center"
                            Height="50"
                            Width="60"
                            Foreground="Lime"/>

                        </StackPanel>
                    </Button>
                    <TextBlock 
                            Text="Start Service"
                        FontWeight="DemiBold"
                            FontSize="15"
                            HorizontalAlignment="Center"
                            Foreground="Black"/>
                </StackPanel>

                <StackPanel Margin="70,0,0,0">
                    <Button
                        Margin="0,30,0,5"
                        materialDesign:ButtonAssist.CornerRadius="8"
                        BorderBrush="Blue"
                        BorderThickness="2"
                        Height="80"
                        Width="80"
                
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Command="{Binding Stop_Service}"
                        Background="{DynamicResource MaterialDesignTextFieldBoxBackground}">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">

                            <materialDesign:PackIcon 
                            Kind="Stop"
                            HorizontalAlignment="Center"
                            Height="50"
                            Width="60"
                            Foreground="Red"/>

                        </StackPanel>
                        

                    </Button>
                    <TextBlock 
                        Text="Stop Service"
                        FontWeight="DemiBold"
                        FontSize="15"
                        HorizontalAlignment="Center"
                        Foreground="Black"/>
                </StackPanel>
               
               
            </StackPanel>

            <StackPanel Grid.Column="2" Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,55">
                <Button
                Height="80"
                Width="80"
                Margin="70,0,0,0"
                Style="{StaticResource MaterialDesignIconButton}"
                ToolTip="Start"
                Command="{Binding NewConnect}"
                Background="{DynamicResource MaterialDesignTextFieldBoxBackground}">
                    <materialDesign:PackIcon
                    Height="80"
                    Foreground="Yellow"
                    Width="80"
                    Kind="PlusCircle" />

                </Button>
                <Button
                Height="80"
                Width="80"
                Margin="70,0,0,0"
                Style="{StaticResource MaterialDesignIconButton}"
                ToolTip="Stop"
                Command="{Binding EditConnect}"
                CommandParameter="{Binding ElementName=Modbus_list,Path=SelectedItem}"
                Background="{DynamicResource MaterialDesignTextFieldBoxBackground}">
                    <materialDesign:PackIcon
                    Height="80"
                    Foreground="#f6236e"
                    Width="80"
                    Kind="FileEdit" />
                </Button>
                <Button
                Height="80"
                Width="80"
                Margin="70,0,0,0"
                Style="{StaticResource MaterialDesignIconButton}"
                ToolTip="Delete"
                Command="{Binding DeleteConnect}"
                CommandParameter="{Binding ElementName=Modbus_list,Path=SelectedItem}"
                Background="{DynamicResource MaterialDesignTextFieldBoxBackground}">
                    <materialDesign:PackIcon
                    Height="80"
                    Foreground="Red"
                    Width="80"
                    Kind="Delete" />
                </Button>
                <Button
                Height="80"
                Width="80"
                Margin="70,0,0,0"
                Style="{StaticResource MaterialDesignIconButton}"
                ToolTip="Connect"
                Command="{Binding ConnectionExcute}"
                Background="{DynamicResource MaterialDesignTextFieldBoxBackground}">
                    <materialDesign:PackIcon
                    Foreground="Lime"
                    Height="80"
                    Width="80"
                    Kind="Connection" />

                </Button>
            </StackPanel>

            <Grid 
            Grid.Column="1"
            Grid.Row="1"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Margin="50,20"
            Width="150"
            Height="80">
                <Button
                x:Name="Home_button"
                DataContext="{StaticResource MenuMainAll}"
                Style="{StaticResource MaterialDesignRaisedButton}"
                Height="80"
                materialDesign:ButtonAssist.CornerRadius="10"
                ToolTip="Back"
                Click="Home_button_Click"
                Command="{Binding DataStream}">
                    <materialDesign:PackIcon Kind="StepBackward2" Height="60" Width="100"/>

                </Button>
            </Grid>
            <Grid 
            Grid.Column="1"
            Grid.Row="1"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Margin="50,20"
            Width="150"
            Height="80">
                <Button
                Visibility="Hidden"
                Name="update_btn"
                DataContext="{StaticResource Modbus}"
                Style="{StaticResource MaterialDesignRaisedButton}"
                Height="80"
                materialDesign:ButtonAssist.CornerRadius="10"
                ToolTip="Back"
                
                Command="{Binding Update_Data}">
                    <materialDesign:PackIcon Kind="StepBackward2" Height="60" Width="100"/>

                </Button>
            </Grid>
        </Grid>
       <!--Nút Bấm-->
        
