<UserControl x:Class="WPF_TEST.View.ModbusScreenView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_TEST.View"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             xmlns:i ="http://schemas.microsoft.com/expression/2010/interactivity"
             DataContext="{StaticResource Modbus}"
             d:DesignHeight="1000" d:DesignWidth="1920">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" Grid.Row="0">
            <GroupBox 
                Margin="30,40,30,10" 
                Header="Controller Name"
                TextBlock.TextAlignment="Center"
                TextBlock.FontSize="26">
                <ListBox 
                    Height="692"
                    x:Name="Modbus_list"
                    ScrollViewer.VerticalScrollBarVisibility="Visible"
                  
                    DataContext="{StaticResource Modbus}"
                    ItemsSource="{Binding ModbusDevices}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DeviceName}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction
                                Command="{Binding Display_Type}"
                                CommandParameter="{Binding ElementName=Modbus_list, Path=SelectedItem}"/>


                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ListBox>

            </GroupBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="0" >
            <GroupBox 
                Margin="30,40,30,10" 
                Header="Controller Details"
                TextBlock.TextAlignment="Center"
                TextBlock.FontSize="26">
                <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                   
                    <Grid 
                        Height="380"
                        DataContext="{StaticResource Modbus}"
                        ScrollViewer.VerticalScrollBarVisibility="Visible">
                        <ContentControl Content="{Binding DisplayType}"/>
                        
                    </Grid>

                </StackPanel>

            </GroupBox>
            <GroupBox
                Margin="30,20,30,0" 
                Header="Data Exportation"
                TextBlock.TextAlignment="Center">
                <StackPanel Orientation="Vertical">
                    <Grid >
                        <TextBlock 
                            Text="Export Rate (ms):"
                            FontSize="20" 
                            HorizontalAlignment="Left"
                            Margin="5"/>
                        <TextBox 
                            Margin="190,0,0,0"
                            HorizontalAlignment="Left" 
                            FontSize="20"
                            Text="N/A"/>
                    </Grid>
                    <Grid Margin="0,10,0,0">
                        <TextBlock 
                            Text="Data Delimiter:"
                            FontSize="20" 
                            HorizontalAlignment="Left"
                            Margin="5"/>
                        <TextBox 
                            Margin="190,0,0,0"
                            HorizontalAlignment="Left" 
                            FontSize="20"
                            Text="N/A"/>
                    </Grid>
                    <Grid Margin="0,10,0,0">
                        <TextBlock 
                            Text="Extraction Method:"
                            FontSize="20" 
                            HorizontalAlignment="Left"
                            Margin="5"/>
                        <TextBox 
                            Margin="190,0,0,0"
                            HorizontalAlignment="Left" 
                            FontSize="20"
                            Text="N/A"/>
                    </Grid>
                    <Grid Margin="0,10,0,0">
                        <TextBlock 
                            Text="Export Directory:"
                            FontSize="20" 
                            HorizontalAlignment="Left"
                            Margin="5"/>
                        <TextBox 
                            Margin="190,0,0,0"
                            HorizontalAlignment="Left" 
                            FontSize="20"
                            Text="N/A"/>
                    </Grid>
                    <Grid Margin="0,10,0,0">
                        <TextBlock 
                            Text="File Path:"
                            FontSize="20" 
                            HorizontalAlignment="Left"
                            Margin="5"/>
                        <TextBox 
                            TextWrapping="Wrap"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            Margin="190,0,0,0"
                            HorizontalAlignment="Left" 
                            FontSize="20"
                            Text="N/A"/>
                    </Grid>
                </StackPanel>
            </GroupBox>
        </StackPanel>
        <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,55">
            <Button
                Height="80"
                Width="80"
                Margin="70,0,0,0"
                Style="{StaticResource MaterialDesignIconButton}"
                ToolTip="Start"
                Background="{DynamicResource MaterialDesignTextFieldBoxBackground}">
                <materialDesign:PackIcon
                    Height="80"
                    Foreground="Yellow"
                    Width="80"
                    Kind="Play" />
            </Button>
            <Button
                Height="80"
                Width="80"
                Margin="70,0,0,0"
                Style="{StaticResource MaterialDesignIconButton}"
                ToolTip="Stop"
                Background="{DynamicResource MaterialDesignTextFieldBoxBackground}">
                <materialDesign:PackIcon
                    Height="80"
                    Foreground="#f6236e"
                    Width="80"
                    Kind="Stop" />
            </Button>
            <Button
                Height="80"
                Width="80"
                Margin="70,0,0,0"
                Style="{StaticResource MaterialDesignIconButton}"
                ToolTip="Start Service"
                Background="{DynamicResource MaterialDesignTextFieldBoxBackground}">
                <materialDesign:PackIcon
                    Height="80"
                    Foreground="Lime"
                    Width="80"
                    Kind="Play" />
            </Button>
            <Button
                Height="80"
                Width="80"
                Margin="70,0,0,0"
                Style="{StaticResource MaterialDesignIconButton}"
                
                Background="{DynamicResource MaterialDesignTextFieldBoxBackground}">
                <materialDesign:PackIcon
                    Foreground="Red"
                    Height="80"
                    Width="80"
                    Kind="Stop" />

            </Button>
        </StackPanel>
        <StackPanel Height="76"
            Orientation="Horizontal" 
            VerticalAlignment="Bottom" 
            Grid.Row="1" Grid.Column="0">
            <TextBlock Text="Start" FontSize="20" Margin="90,0,0,0"/>
            <TextBlock Text="Stop" FontSize="20" Margin="108,0,0,0"/>
            <TextBlock Text="Start Service" FontSize="20" Margin="80,0,0,0"/>
            <TextBlock Text="Stop Service" FontSize="20" Margin="40,0,0,0"/>


        </StackPanel>

        <StackPanel Grid.Column="2" Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,55">
            <Button
                Height="80"
                Width="80"
                Margin="70,0,0,0"
                Style="{StaticResource MaterialDesignIconButton}"
                ToolTip="Start"
                Command="{Binding NewConnect}"
                Background="{DynamicResource MaterialDesignTextFieldBoxBackground}">
                <materialDesign:PackIcon
                    Height="80"
                    Foreground="Yellow"
                    Width="80"
                    Kind="PlusCircle" />

            </Button>
            <Button
                Height="80"
                Width="80"
                Margin="70,0,0,0"
                Style="{StaticResource MaterialDesignIconButton}"
                ToolTip="Stop"
                Command="{Binding EditConnect}"
                CommandParameter="{Binding ElementName=Modbus_list,Path=SelectedItem}"
                Background="{DynamicResource MaterialDesignTextFieldBoxBackground}">
                <materialDesign:PackIcon
                    Height="80"
                    Foreground="#f6236e"
                    Width="80"
                    Kind="FileEdit" />
            </Button>
            <Button
                Height="80"
                Width="80"
                Margin="70,0,0,0"
                Style="{StaticResource MaterialDesignIconButton}"
                ToolTip="Delete"
                Command="{Binding DeleteConnect}"
                CommandParameter="{Binding ElementName=Modbus_list,Path=SelectedItem}"
                Background="{DynamicResource MaterialDesignTextFieldBoxBackground}">
                <materialDesign:PackIcon
                    Height="80"
                    Foreground="Red"
                    Width="80"
                    Kind="Delete" />
            </Button>
            <Button
                Height="80"
                Width="80"
                Margin="70,0,0,0"
                Style="{StaticResource MaterialDesignIconButton}"
                ToolTip="Connect"
                Command="{Binding ConnectionExcute}"
                Background="{DynamicResource MaterialDesignTextFieldBoxBackground}">
                <materialDesign:PackIcon
                    Foreground="Lime"
                    Height="80"
                    Width="80"
                    Kind="Connection" />

            </Button>
        </StackPanel>
        <StackPanel Height="66"
            Orientation="Horizontal" 
            VerticalAlignment="Bottom" 
            Grid.Row="1" Grid.Column="2">
            <TextBlock Text="Add" FontSize="20" Margin="92,0,0,0"/>
            <TextBlock Text="Edit" FontSize="20" Margin="112,0,0,0"/>
            <TextBlock Text="Delete" FontSize="20" Margin="106,0,0,0"/>
            <TextBlock Text="Connect" FontSize="20" Margin="85,0,0,0"/>
        </StackPanel>
        <StackPanel
            Orientation="Vertical" 
            Grid.Row="0"
            Grid.Column="2">
            <GroupBox 
                Margin="30,40,30,10" 
                Header="Modbus Item"
                TextBlock.TextAlignment="Left"
                TextBlock.FontSize="26">
                <ListView 
                    
                    DataContext="{StaticResource Modbus}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ID" DisplayMemberBinding="{Binding ElementName=Modbus_list,Path=SelectedItem.ID}"/>
                            <GridViewColumn Header="Register" DisplayMemberBinding="{Binding ElementName=Modbus_list,Path=SelectedItem.Register_Address}"/>
                            <GridViewColumn Header="Value"/>
                        </GridView>
                    </ListView.View>
                    <ScrollBar Visibility="Collapsed" HorizontalAlignment="Right"/>
                </ListView>

            </GroupBox>
        </StackPanel>
        <Grid 
            Grid.Column="1"
            Grid.Row="1"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Margin="50,20"
            Width="150"
            Height="80">
            <Button
                x:Name="Home_button"
                DataContext="{StaticResource DataStr}"
                Style="{StaticResource MaterialDesignRaisedButton}"
                Height="80"
                materialDesign:ButtonAssist.CornerRadius="10"
                ToolTip="Back"
                Click="Home_button_Click"
                Command="{Binding DataStream}">
                <materialDesign:PackIcon Kind="StepBackward2" Height="60" Width="100"/>
                
            </Button>
        </Grid>
        <Grid 
            Grid.Column="1"
            Grid.Row="1"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Margin="50,20"
            Width="150"
            Height="80">
            <Button
                Visibility="Hidden"
                Name="update_btn"
                DataContext="{StaticResource Modbus}"
                Style="{StaticResource MaterialDesignRaisedButton}"
                Height="80"
                materialDesign:ButtonAssist.CornerRadius="10"
                ToolTip="Back"
                
                Command="{Binding Update_Data}">
                <materialDesign:PackIcon Kind="StepBackward2" Height="60" Width="100"/>

            </Button>
        </Grid>
    </Grid>
</UserControl>
